@model IEnumerable<TrackerSystem.Models.Ticket>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewAll</title>
</head>
<body>


    <table class="table table-striped table-condensed" id="ticketTable">
        <thead>


            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TicketID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Assigned)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Priority)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImagePath)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Assigned)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    
                    <a target="_blank" href="@Html.DisplayFor(modelItem => item.ImagePath).ToString().Remove(0,2)">snap</a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit","Ticket", new { id = item.TicketID })')"><i class="fas fa-pen"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete","Ticket", new { id = item.TicketID })')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
            }
        </tbody>

    </table>
    
</body>
</html>
